{{ set(this, 'title', _Blog.getBlogTitle()) }} 

{{this.registerJs("HomeController.listing();")}}
{% set limit = 10 %}
{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}

<div class="home ajaxArticles" data-existing-nonpinned-count="{{articlesArr.existingNonPinnedCount}}" data-offset="{{limit}}">

    {% set newctvbannersml = network.templatePath~'/static/images/newctvbannersml.jpg'%}
    {% set ctvlogobanner = network.templatePath~'/static/images/ctvlogobanner.jpg'%}

    <div class="card__overlay homebanner" style="background-image: url('{{newctvbannersml}}'); height:470px;">
        <div class="card__content_wrap">
            <div class="card__content">
                <div class="overlaylogo"><img src="{{ctvlogobanner}}"></div>
            </div>
        </div>
    </div>

    {% if articles[0] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[0], 'position': 1, containerClass: 'col-full'}) | raw}}
    {% endif %}

    {% if articles[1] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[1], 'position': 2, containerClass: 'col-third'}) | raw}}
    {% endif %}

    {% if articles[2] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[2], 'position': 3, containerClass: 'col-third'}) | raw}}
    {% endif %}

    {% if articles[3] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[3], 'position': 4, containerClass: 'col-third'}) | raw}}
    {% endif %}

    {% if articles[4] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[4], 'position': 5, containerClass: 'col-half'}) | raw}}
    {% endif %}

    {% if articles[5] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[5], 'position': 6, containerClass: 'col-half'}) | raw}}
    {% endif %}

    {% if articles[6] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[6], 'position': 7, containerClass: 'col-quarter'}) | raw}}
    {% endif %}

    {% if articles[7] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[7], 'position': 8, containerClass: 'col-quarter'}) | raw}}
    {% endif %}

    {% if articles[8] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[8], 'position': 9, containerClass: 'col-quarter'}) | raw}}
    {% endif %}

    {% if articles[9] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[9], 'position': 10, containerClass: 'col-quarter'}) | raw}}
    {% endif %}
    {{this.render('partials/_cta.twig',{keyword: 'cta_1'}) | raw}}
</div>
<div class="text-center has-margin-bottom-40">
    {% if articles|length >= limit %}
        <a href="javascript:void(0)" class="button loadMoreArticles button__profile-follow"><i class="fa fa-arrow-down"></i>Load More</a>
    {% endif %}
</div>

<div class="background-dark">
    <div class="container container-dark">
        <div class="flipbook-inner flipbook-border-top">
            <div class="row">
                <div class="card__content">
                    <i class="fa fa-download" aria-hidden="true"></i>
                    <h2>Download 2017/18 Guide</h2> 
                    <a href="http://www.culturaltourismvictoria.com.au/experience-culture-victoria/" class="btn btn-flipbook">Download</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="related related_partners">
        <div class="related-inner">

            <div class="abovelogotext">
                <h5 align="center">
            To learn more about Victoria's creative and cultural experiences visit:</h5>
            </div>

            <div class="items-per-row-5">
                <div class="partners-row">

                    {% set visitvic = network.templatePath~'/static/images/visitvic.png'%}
                    {% set creativevic = network.templatePath~'/static/images/creativevic.jpg'%}
                    {% set culturevic = network.templatePath~'/static/images/culturevic.jpg'%}
                    {% set collectionsvic = network.templatePath~'/static/images/collectionsvic.jpg'%}
                    {% set regionalartsvic = network.templatePath~'/static/images/regionalartsvic.jpg'%}
                    {% set nationaltrust = network.templatePath~'/static/images/nationaltrust.jpg'%}

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="http://www.visitvictoria.com/" target="_blank">
                            <img width="101" height="42" src="{{vvvisitvic}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="http://creative.vic.gov.au/" target="_blank">
                            <img width="147" height="42" src="{{creativevic}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="http://www.cv.vic.gov.au/" target="_blank">
                            <img width="126" height="42" src="{{culturevic}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="https://victoriancollections.net.au/" target="_blank">
                            <img width="163" height="37" src="{{collectionsvic}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="http://www.rav.net.au/whats-on" target="_blank">
                            <img width="163" height="42" src="{{regionalartsvic}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>

                    <div class="partners-container">
                        <div class="partner-featured-image">
                            <a href="http://www.nationaltrust.org.au/vic/" target="_blank">
                            <img width="163" height="42" src="{{nationaltrust}}" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% set noDataCls = 'hide' %}
{% if articles|length == 0 %}
    {% set noDataCls = '' %}
{% endif %}
<div class="text-center {{noDataCls}} NoArticlesMsg">
    <p class="no-data text-center">No articles found.</p>  
</div>    
